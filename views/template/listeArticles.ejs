<%layout('../layout')%>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Mes Articles</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Panier</h3>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Text
                                    </th>
                                    <th>
                                        Auteur
                                    </th>
                                    <th>
                                        Date
                                    </th>
                                    <th>
                                        Prix
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="tb">
                                
                            </tbody>
                        </table>
                    </div>
                   
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Ajouter un article
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form role="form">
                                <div class="form-group">
                                    <label>Text Input</label>
                                    <input class="form-control" id="content">
                                    <p class="help-block">Leave your message.</p>
                                </div>
                               
                                
                                <a href="#" id="savearticles" class="btn btn-lg btn-success btn-block">Ajouter au panier</a>
                            </form>
                        </div>
                      
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    

</div>
<!-- /#page-wrapper -->

<script>
    $(document).ready(function(){
        $('#savearticles').click(function(){
            $.post("/articles/create"
                  ,{content:$('#content').val()}
                  ,function(result){
                    getList();
                  })
        })
        getList();
    })


    function getList(){
        $.get("/articles/list"
                  ,{}
                  ,function(result){
                    var tb = $('#tb');
                    tb.html("");
                    $.each(result,function(a,b){
                        var html ="<tr><td><button type='button' class='btn btn-warning btn-circle' onclick='delArticles(\""+b._id+"\")'><i class='fa fa-times'></i></button></td><td>"+b.title+"&nbsp;&nbsp;<button type='button' class='btn btn-danger btn-circle' onclick='vote(\""+b._id+"\")'><i class='fa fa-heart'></i></button></td><td>"+b.text+"</td><td>"+b.auteur+"</td><td>"+b.date+"</td><td>"+b.prix+"</td><td>"+b.vote+"</td></tr>";
                        tb.append(html);
                    })
                  })
    }

    function delArticles(id){
         $.post("/articles/delete"
                  ,{id:id}
                  ,function(result){
                    getList();
              })
    }
    function vote(id){
         $.post("/articles/update"
                  ,{id:id}
                  ,function(result){
                    getList();
              })
    }
</script>